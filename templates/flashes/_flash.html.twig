{% trans_default_domain 'flashes' %}

<div class="toast align-items-center text-white bg-{{ type }} border-0" role="alert" aria-live="assertive" aria-atomic="true" data-flashes-target="flash">
    <div class="d-flex">
        <div class="toast-body">{{ message | trans }}</div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>

<div class="p-4 mb-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800" role="alert">
    <span class="font-medium">Success alert!</span> Change a few things up and try submitting again.
</div>
